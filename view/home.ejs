<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <% if (blogs.length === 0) { %>
        <div class="alert alert-info text-center">No blogs posted yet.</div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
          <% blogs.forEach(blog => { %>
            <div class="col">
              <div class="card h-100 shadow">
                <img src="<%= blog.coverImageURL || 'https://via.placeholder.com/300x200?text=No+Image' %>" class="card-img-top" alt="Blog Cover">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">View</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
